/** @var $this Belvg_Storelocator_Block_Location */
/** @var $location Belvg_Storelocator_Model_Location */

$location = $this->getLocation();
?>

<div class="marker-info">
    <?php if($location->getImage()): ?>
        <div class="marker-image">
            <img src="<?php echo $this->helper('storelocator/image')->resize($location, 100, 70); ?>" width="100" height="70" alt="<?php echo $this->escapeHtml($location->getTitle()); ?>"/>
        </div>
    <?php endif; ?>
    <div class="marker-content">
        <div class="marker-title"><?php echo $this->escapeHtml($location->getTitle()); ?></div>
        <div class="marker-description"><?php echo $this->escapeHtml($location->getDescription()); ?></div>
        <div class="marker-address"><?php echo $this->escapeHtml($location->getAddress()); ?></div>
        <?php if($location->getPhone()): ?>
            <div class="marker-phone">
                <?php echo $this->escapeHtml($location->getPhone()); ?>
            </div>
        <?php endif; ?>
        <?php if($location->getWebsite()): ?>
            <div class="marker-website">
                <a href="<?php echo $location->getWebsite(); ?>" target="_blank">
                    <?php echo $this->escapeHtml($location->getWebsite()); ?>
                </a>
            </div>
        <?php endif; ?>

    </div>
</div>