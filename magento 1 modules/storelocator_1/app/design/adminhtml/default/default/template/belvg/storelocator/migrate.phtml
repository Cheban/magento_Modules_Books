?>

<div class="entry-edit">
    <div class="fieldset" id="general">
        <div class="hor-scroll">
            <?php if ($helper->canMigrate()): ?>
                <form action="<?php echo $this->getMigrateUrl(); ?>" method="post">
                    <?php echo $this->getForm()->toHtml(); ?>
                    <input type="hidden" name="form_key" value="<?php echo $this->getFormKey(); ?>"/>
                </form>
            <?php else: ?>
                <?php echo $helper->__('Can not be used because there is no source for the migration.'); ?>
            <?php endif; ?>
        </div>
    </div>
</div>